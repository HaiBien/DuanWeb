@model Model.EF.LichHen

@{
    ViewBag.Title = "CreateLichHen";
    Layout = "~/Views/Shared/_LayoutP.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/toastr.js"></script>
<link href="~/Content/toastr.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
<style>
    .size {
        min-height: 30em;
        max-height: 30em;
    }

    .img-radius {
        border-radius: 2em;
    }
    .an{
        display: none;
    }
</style>
@{
    var u = Session["useView"] as Model.EF.BenhNhan;
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal container ">
            <br /><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6">
                    <br />
                    <div class="an">
                        @Html.EditorFor(model => model.IDBenhNhan, new { htmlAttributes = new { @class = "form-control col-12", @Value = u.IDBenhNhan } })
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-12 no-padding-left">
                            <br />
                            <h6>Chọn bác sĩ tư vấn</h6>
                        </div>
                        <div class="col-md-12 no-padding-left">
                            @Html.DropDownList("IDBacSi", null, htmlAttributes: new { @class = "form-control col-12 no-padding-left" })
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-12 no-padding-left">
                            <br />
                            <h6>Thời gian bắt đầu</h6>
                        </div>
                        <div class="col-md-12 no-padding-left">
                            @Html.EditorFor(model => model.BatDau, new { htmlAttributes = new { @class = "form-control col-12", @type = "datetime-local" } })
                        </div>
                    </div>


                    <div class="form-group col-md-12">
                        <div class="col-md-12 no-padding-left">
                            <br />
                            <h6> Ghi chú</h6>
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control col-12" } })
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <div class="col-xl-4 col-md-7 col-sm-7 col-5 center">
                            <input id="btnsave" type="submit" value="Xác nhận lịch hẹn" class="col-md-12 btn btn-success" />
                        </div>
                        <br />
                    </div>
                </div>

                <div class="col-lg-6 mySlides">
                    <img class="col-md-12 size  img-radius" src="~/images/slide1.jpg" />
                </div>
                <div class="col-lg-6 mySlides">
                    <img class="col-md-12 size img-radius " src="~/images/slide2.jpg" />
                </div>
                <div class="col-lg-6 mySlides">
                    <img class="col-md-12 size img-radius" src="~/images/slide4.jpg" />
                </div>

            </div>
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script>
        $("#btn1").click(function () {
            // toastr.success("hhaskkdjas", "đâsdasd");
            toastr["success"]("Đặt lịch hẹn thành công!")
        });
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "200",
            "hideDuration": "1000",
            "timeOut": "2000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
    <script>

        var myIndex = 0;
        carousel();

        function carousel() {
            var i;
            var x = document.getElementsByClassName("mySlides");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            myIndex++;
            if (myIndex > x.length) { myIndex = 1 }
            x[myIndex - 1].style.display = "block";
            setTimeout(carousel, 3000);
        }
    </script>
