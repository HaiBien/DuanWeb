

@model Model.EF.HoiDap
@{
    ViewBag.Title = "CreateHoiDap";
    Layout = "~/Views/Shared/_LayoutP.cshtml";
}
<style>
    .an {
        display: none;
    }
</style>
@{
    var u = Session["useView"] as Model.EF.BenhNhan;
}
<div class="container">
    <br />

    <br /><br />
    <section class="forms">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container-fluid">
                <header class="text-center">
                    <h1 class=" text-center"> Câu hỏi của bạn sẽ được gửi đến bác sĩ</h1>
                    <br />
                </header>
                <div class="an">
                    @Html.EditorFor(model => model.IDBenhNhan, new { htmlAttributes = new { @class = "form-control col-12", @Value = u.IDBenhNhan } })
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12"><h6>Nội dung câu hỏi</h6></div>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.CauHoi, new { htmlAttributes = new { @class = "form-control col-12 col-xl-12", } })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 center">
                            <br />
                            <input type="submit" value="Gửi câu hỏi" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
