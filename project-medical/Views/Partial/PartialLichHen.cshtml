
<style>
    .cauhoi {
        padding-top: 1em;
        margin-top: 1em;
        border-radius: 0.5em;
        border: 0.5px solid #CCCCCC;
    }
</style>
@foreach (var i in Model)
{
    <div class="cauhoi">
        <div class="row">
            <div class="col-md-3">
                <p class="font-weight-bold" style="padding-left:1em;">@i.Bacsi.HoTen</p>
            </div>
            <div class="col-md-3">
                @i.BatDau
            </div>
            <div class="col-md-3">
                <h6>@i.GhiChu</h6>
            </div>
            @{
                if(i.TrangThai == 0)
                {
                        <div class="col-md-3">
                            Đang chờ xử lý
                        </div>
                }
                else if(i.TrangThai == 1)
                {
                    
                        <div class="col-md-3">
                            Đã lên lịch
                        </div>
                }
                else
                {
                        <div class="col-md-3">
                            Hoàn thành
                        </div>
                }
            }
            

        </div>
    </div>
}
