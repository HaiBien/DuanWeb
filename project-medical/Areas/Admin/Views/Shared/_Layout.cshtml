<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Remote Medical</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/css/fontastic.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/css/grasp_mobile_progress_circle-1.0.0.min.css">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/css/style.default.css" id="theme-stylesheet">
    <link rel="stylesheet" href="~/Content/TemplateAdmin/css/custom.css">
    <link rel="shortcut icon" href="~/Content/TemplateAdmin/img/favicon.ico">
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
</head>
<body>
    <nav class="side-navbar">
        <div class="side-navbar-wrapper">
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <div class="sidenav-header-inner text-center">
                    <img src="~/images/ao-y-ta-dieu-duong-mau-4-300x450.jpg" alt="person" class="img-fluid rounded-circle">
                    <h2 class="h5">Admin</h2><span>Quản trị hệ thống</span>
                </div>
                <div class="sidenav-header-logo"><a href="/Admin/Dashboard" class="brand-small text-center icon-home"></a></div>
            </div>
            <div class="main-menu">
                
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    <li>@Html.ActionLink("  Trang chủ", "Dashboard", "Dashboard", null, new { @class = "text-white fa fa-home" })</li>
                    <li>@Html.ActionLink("  Trung tâm y tế", "Index", "TrungTamYTes", null, new { @class = "text-white fa fa-hospital-o" })</li>
                    <li>@Html.ActionLink("  Tình hình dịch bệnh", "Index", "DichBenhs", null, new { @class = "text-white fa fa-newspaper-o" })</li>
                    <li>@Html.ActionLink("  Hỏi đáp", "Index", "HoiDaps", null, new { @class = "text-white fa fa-question-circle-o" })</li>
                    <li>@Html.ActionLink("  Thông báo", "Index", "ThongBaos", null, new { @class = "text-white fa fa-question-circle-o" })</li>
                    <li>
                        <a href="#exampledropdownDropdown" aria-expanded="false" data-toggle="collapse" class="text-white"> <i class="fa fa-users"></i>Quản lý tài khoản </a>
                        <ul id="exampledropdownDropdown" class="collapse list-unstyled ">
                            <li>@Html.ActionLink("  Tài khoản hệ thống", "Index", "TrungTamYTes", null, new { @class = "text-white fa fa-user-circle-o" })</li>
                            <li>@Html.ActionLink("  Tài khoản bác sĩ", "Index", "Bacsis", null, new { @class = "text-white fa fa-user-circle" })</li>
                            <li>@Html.ActionLink("  Tài khoản người dùng", "Index", "BenhNhans", null, new { @class = "text-white fa fa-user-circle" })</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("  Hồ sơ bệnh án", "Index", "HoSoes", null, new { @class = "text-white fa fa-book" })</li>
                    <li>@Html.ActionLink("  Quản lí khoa khám bệnh", "Index", "Khoas", null, new { @class = "text-white fa fa-book" })</li>
                    <li>@Html.ActionLink("  Lịch hẹn khám bệnh", "Index", "LichHens", null, new { @class = "text-white fa fa-book" })</li>
                    <li>@Html.ActionLink("  Tin tức", "Index", "TinTucs", null, new { @class = "text-white fa fa-book" })</li>
                    <li><a href="login.html"> <i class="icon-interface-windows "></i>Đăng xuất</a></li>
                </ul>
            </div>   
        </div>
    </nav>
    <div class="page">
        <header class="header ">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <a id="toggle-btn" href="#" class="menu-btn"><i class="icon-bars"> </i></a>
                            <a href="index.html" class="navbar-brand">
                                <div class="brand-text d-none d-md-inline-block"><img src="~/Content/Untitled2.png" /> </div>
                            </a>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">                       
                            <li class="nav-item"><a href="login.html" class="nav-link logout"> <span class="d-none d-sm-inline-block">Logout</span><i class="fa fa-sign-out"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>


        <div class="body-content">
            @RenderBody()

        </div>
        <footer class="main-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <p>Your company &copy; 2017-2020</p>
                    </div>
                    <div class="col-sm-6 text-right">
                        <p>Design by <a href="https://bootstrapious.com/p/bootstrap-4-dashboard" class="external">Bootstrapious</a></p>                     
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/Content/TemplateAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/charts-home.js"></script>
    <script src="~/Content/TemplateAdmin/js/front.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
