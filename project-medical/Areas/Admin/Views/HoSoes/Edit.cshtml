
    
    @model Model.EF.HoSo
    @{
        ViewBag.Title = "Edit";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }
    <div class="breadcrumb-holder">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HoSoes">Trang chủ</a></li>
                <li class="breadcrumb-item active"><a href="/Admin/HoSoes">Danh sách hồ sơ bệnh án</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa thông tin</li>
            </ul>
        </div>
    </div>
    <section class="forms">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="container-fluid">
            <header>
                <h1 class="h3 display icon-bars">  Thêm mới dịch bệnh</h1>
            </header>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDHoSo)

            <form class="form-horizontal">
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Tên bệnh nhân</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.DropDownList("IDBenhNhan", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDBenhNhan, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Tên bác sĩ</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.DropDownList("IDBacSi", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDBacSi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Ngày khám</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.NgayKham, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayKham, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Kết quả</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.KetQua, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KetQua, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Ghi chú</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-sm-4 offset-sm-2">
                        <a href="/Admin/HoSoes" class="text-white btn btn-dark">Quay lại </a>
                        <input type="submit" class="btn btn-primary" value="Chỉnh sửa">
                    </div>
                </div>
            </form>
        </div>
        }

    </section>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
