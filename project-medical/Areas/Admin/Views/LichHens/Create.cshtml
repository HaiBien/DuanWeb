

@model Model.EF.LichHen

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/ThongBaos">Trang chủ</a></li>
            <li class="breadcrumb-item active"><a href="/Admin/LichHens">Danh sách lịch hẹn</a></li>
            <li class="breadcrumb-item active">Thêm mới</li>
        </ul>
    </div>
</div>
<section class="forms">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid">
            <header>
                <h1 class="h3 display icon-bars">  Thêm mới lịch hẹn</h1>
            </header>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form class="form-horizontal">
            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Tên bệnh nhân</label>
                </div>
                <div class="col-sm-10">
                    @Html.DropDownList("IDBenhNhan", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDBenhNhan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Tên bác sĩ</label>
                </div>
                <div class="col-sm-10">
                    @Html.DropDownList("IDBacSi", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDBacSi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Thời gian bắt đầu</label>
                </div>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.BatDau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BatDau, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Thời gian kết thúc</label>
                </div>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.KetThuc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KetThuc, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Trạng thái</label>
                </div>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Ghi chú</label>
                </div>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-4 offset-sm-2">
                    <a href="/Admin/LichHens" class="text-white btn btn-dark"> Quay lại</a>
                    <input type="submit" class="btn btn-primary" value="Thêm mới">
                </div>
            </div>
        </form>
        </div>
    }

</section>

