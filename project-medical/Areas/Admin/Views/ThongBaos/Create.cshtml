
@model Model.EF.ThongBao

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/ThongBaos">Trang chủ</a></li>
            <li class="breadcrumb-item active"><a href="/Admin/ThongBaos">Danh sách thông báo</a></li>
            <li class="breadcrumb-item active">Thêm mới</li>
        </ul>
    </div>
</div>
<section class="forms">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid">
            <header>
                <h1 class="h3 display icon-bars">  Thêm mới dịch bệnh</h1>
            </header>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form class="form-horizontal">
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Nội dung thông báo</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Tên bệnh nhân</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.DropDownList("IDBenhNhan", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDBenhNhan, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Ngày thông báo</label>
                    </div>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.NgThongBao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgThongBao, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-4 offset-sm-2">
                        <a href="/Admin/ThongBaos" class="text-white btn btn-dark"> Quay lại</a>
                        <input type="submit" class="btn btn-primary" value="Thêm mới">
                    </div>
                </div>
            </form>
        </div>
    }

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
